       {"codec": "video/mp4;",
        "resource": "./assets/demo2.mp4"
       },
       {"codec": "video/ogg;",
        "resource": "./assets/demo2.ogv"
       }
     ]
    },
    {"type": "flash",
     "timeout": 3,
