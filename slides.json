    },
    {"type": "image",
     "timeout": 3,
     "resource": "./assets/wallpaper.jpg",
     "mode": "crop"
    },
    {"type": "image",
     "timeout": 10,
     "resource": "./assets/last2.jpg",
     "mode": "fullscreen"
    }, 
    {"type": "video",
     "timeout": 20,
